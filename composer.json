{
  "name": "xepozz/request-id",
  "description": "Tracing request and response IDs for Yii 3",
  "minimum-stability": "stable",
  "keywords": [
    "yii",
    "yii3",
    "yii-extension",
    "yii-module",
    "yii-plugin",
    "yii-package",
    "request-id",
    "tracing"
  ],
  "require": {
    "php": "^8.1",
    "psr/http-server-middleware": "^1.0",
    "ramsey/uuid": "^4.7.3"
  },
  "require-dev": {
    "nyholm/psr7": "^1.5.1",
    "phpunit/phpunit": "10.0.17",
    "vimeo/psalm": "^5.8",
    "yiisoft/yii-debug": "dev-split-debug"
  },
  "scripts": {
    "test": "phpunit --testdox",
    "psalm": "psalm"
  },
  "autoload": {
    "psr-4": {
      "Xepozz\\RequestID\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Xepozz\\RequestID\\Tests\\": "tests"
    }
  },
  "extra": {
    "config-plugin-options": {
      "source-directory": "config"
    },
    "config-plugin": {
      "params": "params.php",
      "di": "di.php",
      "events": "events.php"
    }
  },
  "config": {
    "sort-packages": true
  }
}
